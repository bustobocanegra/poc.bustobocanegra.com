---

import BaseLayout from '../layouts/MainLayout.astro';

const pageTitle = "Busto Bocanegra";

---

<BaseLayout pageTitle={pageTitle}>
  <section class="hero">
    <img class="hero-image" src="https://i.gifer.com/LGUj.gif" alt="miscellaneous images from projects">
  </section>
</BaseLayout>

<style>
  .hero {
    display: flex;
    height: fit-content;
  }

  .hero .hero-image {
    width: auto;
    height: 100%;
    padding: 5vw 0;
    margin: 0 auto;
    transform: rotate(-6deg);
  }
</style>
