---

import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;

---

<BaseLayout pageTitle={frontmatter.projectName}>
  <section class="project-cover">
    <img src={frontmatter.image.url} alt={frontmatter.image.url}>
  </section>
  <section class="project-head">
    <div><h2>{frontmatter.projectName}</h2></div>
    <div>
      <p>{frontmatter.projectDescription}</p>
      <p>{frontmatter.projectPurpose}</p>
    </div>
  </section>
  <section class="project-body">
    <slot />
    <footer>
      <button class="back-to-top" href="#">Back to Top <span class="arrow-up">â†‘</span></button>
    </footer>
  </section>
</BaseLayout>

<style>
  footer {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    padding: 2rem 0;
  }

  .back-to-top {
    font-size: large;
    padding: 1rem;
    margin-left: auto;
    background-color: transparent;
    border: none;
    cursor: pointer;
  }

  .back-to-top:hover {
    text-decoration: underline dotted .1rem;
    text-underline-position: under;
  }

  .arrow-up {
    display: inline-block;
    margin-left: 3px;
    transition: transform .3s ease;
  }

  *:hover > .arrow-up {
    transform: translate(0,-5px);
  }

  .project-head {
    display: flex;
    flex-flow: column nowrap;
    align-items: baseline;
  }

  .project-head,
  .project-body {
    max-width: 1200px;
    margin: 0 auto;
  }

  @media screen and (min-width: 768px) {
    .project-head {
      flex-flow: row nowrap;
      justify-content: space-between;
      gap: 2rem;
    }

    .project-head div:first-child {
      flex: 1 0 50%;
    }
  }
</style>
