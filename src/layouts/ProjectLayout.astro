---

import MainLayout from './MainLayout.astro';
import Footer from '../components/Footer.astro';
import '../styles/project.css';

const { projectFrontmatter, projectCover } = Astro.props;

---

<MainLayout pageTitle={projectFrontmatter.projectName}>
  <div class="container">
    <section class="project-cover">
      <img src={projectCover.src} alt={projectCover.alt} />
    </section>
    <section class="project-head">
      <div><h2>{projectFrontmatter.projectName}</h2></div>
      <div>
        <p>{projectFrontmatter.projectDescription}</p>
        <p>{projectFrontmatter.projectPurpose}</p>
      </div>
    </section>
    <section class="project-body">
      <slot />
    </section>
  </div>
  <Footer/>
</MainLayout>

<style>
  .project-head,
  .project-body {
    max-width: 1200px;
  }

  .project-head {
    display: flex;
    flex-flow: column nowrap;
    align-items: baseline;
    padding: 3rem 0;
    margin: 0 auto;
    border-bottom: 1px solid var(--pico-muted-border-color);
  }

  .project-body {
    padding: 3rem 0;
    margin: 0 auto;
  }

  @media screen and (min-width: 768px) {
    .project-head {
      flex-flow: row nowrap;
      justify-content: space-between;
      gap: 2rem;
    }

    .project-head div:first-child {
      flex: 1 0 50%;
    }
  }
</style>
