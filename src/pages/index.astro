---

import MainLayout from '../layouts/MainLayout.astro';
import hero from '../images/hero.gif';

const pageTitle = "Busto Bocanegra";

---

<MainLayout pageTitle={pageTitle}>
  <div class="container">
    <section class="hero">
      <img class="hero-image" src={hero.src} alt="miscellaneous images from projects">
    </section>
  </div>
</MainLayout>

<style>
  .hero {
    display: flex;
    height: fit-content;
  }

  .hero .hero-image {
    width: auto;
    height: 100%;
    margin: 0 auto;
  }
</style>
